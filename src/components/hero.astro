---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <iframe
    width="560"
    height="315"
    src="https://www.youtube.com/embed/p4LPIoWdMuY?autoplay=1"
    title="YouTube video player"
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
  ></iframe>
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      NectarGPT -
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      AI Assistant Chrome Extension Powered by GPT <wbr />
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://github.com/socialtribexyz/nectarGPT"
        href="https://github.com/socialtribexyz/nectarGPT"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />

        download NectarGPT 
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/socialtribexyz/nectarGPT/blob/main/NectarGPTAGI/prompt.txt"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
        FREE Prompt guide
      </Link>
    </div>
  </div>
</main>
